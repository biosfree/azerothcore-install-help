root = true

[*]
end_of_line = lf
insert_final_newline = true
max_line_length = 80
charset = utf-8
indent_style = space
indent_size = 4
tab_width = 4

# Matches multiple files with brace expansion notation
[*.{js,jsx,html,sass}]
indent_style = tab
indent_size = 4
trim_trailing_whitespace = true

[*.md]
indent_style = tab
indent_size = 2
trim_trailing_whitespace = false
